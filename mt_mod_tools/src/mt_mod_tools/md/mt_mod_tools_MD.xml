<?xml version="1.0" encoding="utf-8"?>
<mdscript name="MT_Mod_Tools" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="md.xsd">
	<cues>
		
		<cue name="SectionHandler_MT_ReloadUI" instantiate="false" namespace="this">
			<conditions>
				<check_any>
					<event_conversation_next_section sectionprefix="gMT_ReloadUI" />
					<event_conversation_returned_to_section sectionprefix="gMT_ReloadUI" />
				</check_any>
			</conditions>
			<actions>
				<speak actor="player.computer" priority="0">
					<text line="131" comment="[Betty]: Affirmitive" />
				</speak>
				<open_conversation_menu menu="gMT_ReloadUI" param="[0,0]"/>
				<add_conversation_view view="closeupdetailmonitor"/>
				<!-- Reset our cue for the next time -->
				<reset_cue cue="this" />
			</actions>
		</cue>
		
		<cue name="SectionHandler_MT_WarpPlayer" instantiate="false" namespace="this">
			<conditions>
				<check_any>
					<event_conversation_next_section sectionprefix="gMT_WarpPlayerShip" />
					<event_conversation_returned_to_section sectionprefix="gMT_WarpPlayerShip" />
				</check_any>
			</conditions>
			<actions>
				<open_conversation_menu menu="MapMenu" param="'zone'" param2="'player.primaryship.zone'" />
				<add_conversation_view view="closeupdetailmonitor" />
				<reset_cue cue="this" />
			</actions>
		</cue>
		
	</cues>
</mdscript>
